 publisher = {American Physical Society (APS)},
 title = {Vacancy- and adatom-induced √3×√3 reconstructions of the Si(111) surface},
 url = {https://doi.org/10.1103%2Fphysrevb.40.9999},
 volume = {40},
 year = {1989}
}

